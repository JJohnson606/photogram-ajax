<%= form_with(model: like, class: "d-inline-block", remote: true, id: "like-form") do |form| %>
  <%= form.hidden_field :fan_id %>
  <%= form.hidden_field :photo_id %>
  <%= form.button class: "btn btn-link link-underline link-underline-opacity-0 link-underline-opacity-100-hover", id: "like-button" do %>
    <i class="far fa-heart fa-fw"></i> Like
  <% end %>
<% end %>
